{
    "version": 4,
    "include": [
        "./ConanPresets.json"
    ],
    "configurePresets": [
        {
            "name": "MSVC",
            "displayName": "VS Compiler",
            "description": "Configure using VS 17 2022 Compiler and Release conan dependencies.",
            "inherits": [
                "conan-msvc"
            ],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_INIT": "/W4 /EHsc"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "MSVC Debug",
            "configurePreset": "MSVC",
            "configuration": "Debug"
        },
        {
            "name": "MSVC Release",
            "configurePreset": "MSVC",
            "configuration": "Release"
        }
    ],
    "testPresets": []
}
